<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="./css/secret.css">
</head>

<body>
    <div class="wrapper">

        <!-- sidebar -->
        <%- include('./partials/admin_sidebar.ejs') %>

            <div class="main">

                <!-- navabr -->
                <%- include('./partials/navbar.ejs') %>


                    <main class="content px-3 py-2">
                        <div class="container-fluid">
                            <div class="mb-3">
                                <h4>Dashboard</h4>
                            </div>
                            <!-- Product list  -->
                            <div class="row" id="productList">
                                <!-- Product Form -->
                                <%- include('./partials/pForm.ejs') %>

                                    <!-- Product table  -->
                                    <% if(tUser.role=='admin' ){ %>
                                        <!-- Table Element for Admin-->
                                        <div class="card border-0">

                                            <div class="card-body table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Title</th>
                                                            <th scope="col">Quantity</th>
                                                            <th scope="col">Price</th>
                                                            <th scope="col">Update</th>
                                                            <th scope="col">Delete</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- need to add users info via mongo db -->
                                                        <% allProducts.forEach((i)=>{ %>
                                                            <tr>
                                                                <td>
                                                                    <%=i.pName%>
                                                                </td>
                                                                <td>
                                                                    <%=i.pQuantity%>
                                                                </td>
                                                                <td>
                                                                    <%=i.price%>
                                                                </td>
                                                                <td>
                                                                    <button class="btn btn-sm btn-success"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#<%= i._id %>">Update</button>
                                                                </td>
                                                                <td>
                                                                    <form action="/deleteProduct" method="post">
                                                                        <input type="hidden" name="pid"
                                                                            value="<%= i._id %>">
                                                                        <button type="submit"
                                                                            class="btn btn-sm btn-danger">Delete</button>
                                                                    </form>
                                                                </td>
                                                                <div class="modal fade" id="<%=i._id%>" tabindex="-1"
                                                                    aria-labelledby="exampleModalLabel"
                                                                    aria-hidden="true">
                                                                    <div class="modal-dialog">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h1 class="modal-title fs-5"
                                                                                    id="exampleModalLabel">Product
                                                                                    Info</h1>
                                                                                <button type="button" class="btn-close"
                                                                                    data-bs-dismiss="modal"
                                                                                    aria-label="Close"></button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <form action="/updateProduct"
                                                                                    method="post">

                                                                                    <!-- <h3 class="text-center mb-3">
                                                                                        Sign Up</h3> -->
                                                                                    <div class="row">
                                                                                        <input type="hidden" name="pid"
                                                                                            value="<%= i._id %>">
                                                                                        <input type="hidden"
                                                                                            name="userId"
                                                                                            value="<%= tUser._id %>">
                                                                                        <div class="col-md-12 mb-2">
                                                                                            <label for="title"
                                                                                                class="form-label">Product
                                                                                                Title</label>
                                                                                            <input type="text"
                                                                                                name="pName"
                                                                                                class="form-control"
                                                                                                value="<%=i.pName%>"
                                                                                                required>
                                                                                        </div>
                                                                                        <div class="col-md-12 mb-2">
                                                                                            <label for="pQuantity"
                                                                                                class="form-label">Quantity</label>
                                                                                            <input type="number"
                                                                                                name="pQuantity"
                                                                                                class="form-control"
                                                                                                value="<%=i.pQuantity%>"
                                                                                                required>
                                                                                        </div>
                                                                                        <div class="col-md-12 mb-2">
                                                                                            <label for="price"
                                                                                                class="form-label">Price</label>
                                                                                            <input type="number"
                                                                                                name="price"
                                                                                                class="form-control"
                                                                                                value="<%=i.price%>"
                                                                                                required>
                                                                                        </div>
                                                                                        <div
                                                                                            class="col-12 d-flex gap-3 modal-footer mt-3">
                                                                                            <button type="submit"
                                                                                                class="btn btn-primary mt-2">Update</button>
                                                                                            <button type="button"
                                                                                                class="btn btn-secondary"
                                                                                                data-bs-dismiss="modal">Close</button>
                                                                                        </div>
                                                                                </form>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <% } else{ %>
                                            <!-- Table Element for user -->
                                            <div class="card border-0">

                                                <div class="card-body table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th scope="col">Title</th>
                                                                <th scope="col">Quantity</th>
                                                                <th scope="col">Price</th>
                                                                <th scope="col">Update</th>
                                                                <th scope="col">Delete</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <!-- need to add users info via mongo db -->
                                                            <% userProducts.forEach((i)=>{ %>
                                                                <tr>
                                                                    <td>
                                                                        <%=i.pName%>
                                                                    </td>
                                                                    <td>
                                                                        <%=i.pQuantity%>
                                                                    </td>
                                                                    <td>
                                                                        <%=i.price%>
                                                                    </td>
                                                                    <td>
                                                                        <button class="btn btn-sm btn-success"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#<%= i._id %>">Update</button>
                                                                    </td>
                                                                    <td>
                                                                        <form action="/deleteProduct" method="post">
                                                                            <input type="hidden" name="pid"
                                                                                value="<%= i._id %>">
                                                                            <button type="submit"
                                                                                class="btn btn-sm btn-danger">Delete</button>
                                                                        </form>
                                                                    </td>
                                                                    <div class="modal fade" id="<%=i._id%>"
                                                                        tabindex="-1"
                                                                        aria-labelledby="exampleModalLabel"
                                                                        aria-hidden="true">
                                                                        <div class="modal-dialog">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h1 class="modal-title fs-5"
                                                                                        id="exampleModalLabel">
                                                                                        Product Info</h1>
                                                                                    <button type="button"
                                                                                        class="btn-close"
                                                                                        data-bs-dismiss="modal"
                                                                                        aria-label="Close"></button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <form action="/updateProduct"
                                                                                        method="post">

                                                                                        <!-- <h3 class="text-center mb-3">
                                                                                            Sign Up</h3> -->
                                                                                        <div class="row">
                                                                                            <input type="hidden"
                                                                                                name="pid"
                                                                                                value="<%= i._id %>">
                                                                                            <input type="hidden"
                                                                                                name="userId"
                                                                                                value="<%= tUser._id %>">
                                                                                            <div class="col-md-12 mb-2">
                                                                                                <label for="title"
                                                                                                    class="form-label">Product
                                                                                                    Title</label>
                                                                                                <input type="text"
                                                                                                    name="pName"
                                                                                                    class="form-control"
                                                                                                    value="<%=i.pName%>"
                                                                                                    required>
                                                                                            </div>
                                                                                            <div class="col-md-12 mb-2">
                                                                                                <label for="pQuantity"
                                                                                                    class="form-label">Quantity</label>
                                                                                                <input type="number"
                                                                                                    name="pQuantity"
                                                                                                    class="form-control"
                                                                                                    value="<%=i.pQuantity%>"
                                                                                                    required>
                                                                                            </div>
                                                                                            <div class="col-md-12 mb-2">
                                                                                                <label for="price"
                                                                                                    class="form-label">Price</label>
                                                                                                <input type="number"
                                                                                                    name="price"
                                                                                                    class="form-control"
                                                                                                    value="<%=i.price%>"
                                                                                                    required>
                                                                                            </div>
                                                                                            <div
                                                                                                class="col-12 d-flex gap-3 modal-footer mt-3">
                                                                                                <button type="submit"
                                                                                                    class="btn btn-primary mt-2">Update</button>
                                                                                                <button type="button"
                                                                                                    class="btn btn-secondary"
                                                                                                    data-bs-dismiss="modal">Close</button>
                                                                                            </div>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </tr>
                                                                <% }) %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <% } %>
                            </div>
                        </div>
                    </main>
                    <!-- <a href="#" class="theme-toggle">
                        <i class="fa-regular fa-moon"></i>
                        <i class="fa-regular fa-sun"></i>
                    </a> -->
                    <%- include('./partials/footer.ejs') %>
            </div>
    </div>
    <script type="text/javascript" src="./js/script.js"></script>
</body>

</html>