<nav class="navbar navbar-expand px-3 border-bottom">
    <button class="btn" id="sidebar-toggle" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse navbar">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                    <% if(tUser.photo !=="" ) {%>
                        <img src="../uploads/<%= tUser._id %>/<%= tUser.photo %>" class="avatar"
                            style="border-radius: 50%;" alt="">
                        <% } else{%>
                            <img src="./img/profile.jpg" class="avatar img-fluid rounded" alt="">
                            <% } %>
                </a>
                <div class="dropdown-menu dropdown-menu-end">
                    <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#profileInfo">Profile</a>
                    <!-- <a class="dropdown-item">Setting</a> -->
                    <a href="/logout" class="dropdown-item">Logout</a>
                </div>
            </li>
        </ul>
    </div>




    <div class="modal fade" id="profileInfo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <% if(tUser.photo !=="" ) {%>
                        <img src="../uploads/<%= tUser._id %>/<%= tUser.photo %>" height="70vh"
                            style="border-radius: 50%;" alt="">
                        <% } else{%>
                            <img src="./img/profile.jpg" class="avatar img-fluid rounded">
                            <% } %>
                                <h1 class="modal-title mx-auto fs-5" id="exampleModalLabel">Profile</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/updateMe" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <input type="hidden" name="userID" value="<%= tUser._id %>">
                            <div class="col-md-12 mb-2">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" name="firstname" class="form-control" value="<%=tUser.firstname%>"
                                    required>
                            </div>
                            <div class="col-md-12 mb-2">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" name="lastname" class="form-control" value="<%=tUser.lastname%>"
                                    required>
                            </div>
                            <div class="col-md-12 mb-2">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="email" class="form-control" value="<%=tUser.email%>" required>
                            </div>
                            <div class="col-md-12 mb-2">
                                <label for="mobile" class="form-label">Mobile</label>
                                <input type="text" name="mobile" class="form-control" value="<%=tUser.mobile%>"
                                    required>
                            </div>
                            <% if(tUser.gender=='male' ){ %>
                                <div class="col-md-12 mb-2">
                                    <label class="form-label d-block">Gender</label>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" name="gender" class="form-check-input" value="male" checked>
                                        <label class="form-check-label">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" name="gender" class="form-check-input" value="female">
                                        <label class="form-check-label">Female</label>
                                    </div>
                                </div>
                                <% } else{ %>
                                    <div class="col-md-12 mb-2">
                                        <label class="form-label d-block">Gender</label>
                                        <div class="form-check form-check-inline">
                                            <input type="radio" name="gender" class="form-check-input" value="male">
                                            <label class="form-check-label">Male</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input type="radio" name="gender" class="form-check-input" value="female"
                                                checked>
                                            <label class="form-check-label">Female</label>
                                        </div>
                                    </div>
                                    <% } %>
                                        <div class="col-md-12 mb-2">
                                            <label for="photo" class="form-label">Profile Photo</label>
                                            <input type="file" name="userPhoto" class="form-control">
                                        </div>
                                        <br>
                                        <div class="col-md-12 mb-2 d-flex gap-3">
                                            <label for="">
                                                <strong>Role:</strong>
                                                <span>
                                                    <%=tUser.role%>
                                                </span>
                                            </label>
                                            <label for=""><strong>state:</strong>
                                                <% if(tUser.state==true){ %>
                                                    <span>
                                                        Active
                                                    </span>
                                                    <% } else{ %>
                                                        <span>Inactive</span>
                                                        <% } %>
                                            </label>
                                        </div>
                                        <div class="col-12 d-flex gap-3 modal-footer mt-3">
                                            <button type="submit" class="btn btn-primary mt-2">Update</button>
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</nav>