<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="./css/secret.css">
</head>

<body>
    <div class="wrapper">

        <!-- sidebar -->
        <%- include('./partials/admin_sidebar.ejs') %>

            <div class="main">

                <!-- navabr -->
                <%- include('./partials/navbar.ejs') %>


                    <main class="content px-3 py-2">
                        <div class="container-fluid">
                            <div class="mb-3">
                                <h4>Dashboard</h4>
                            </div>


                            <div class="row justify-content-center" id="userList">
                                <div class="col-12 col-md-6 d-flex">
                                    <form action="/updateUser" method="post">
                                        <h3 class="text-center mb-3">Update User</h3>
                                        <div class="row">
                                            <input type="hidden" name="thatUserID" value="<%= user._id %>">
                                            <div class="col-md-12 mb-2">
                                                <label for="firstName" class="form-label">First Name</label>
                                                <input type="text" name="firstname" class="form-control"
                                                    value="<%=user.firstname%>" required>
                                            </div>
                                            <div class="col-md-12 mb-2">
                                                <label for="lastName" class="form-label">Last Name</label>
                                                <input type="text" name="lastname" class="form-control"
                                                    value="<%=user.lastname%>" required>
                                            </div>
                                            <div class="col-md-12 mb-2">
                                                <label for="email" class="form-label">Email</label>
                                                <input type="email" name="email" class="form-control"
                                                    value="<%=user.email%>" required>
                                            </div>
                                            <div class="col-md-12 mb-2">
                                                <label for="mobile" class="form-label">Mobile</label>
                                                <input type="text" name="mobile" class="form-control"
                                                    value="<%=user.mobile%>" required>
                                            </div>
                                            <% if(user.gender=='male' ){ %>
                                                <div class="col-md-12 mb-2">
                                                    <label class="form-label d-block">Gender</label>
                                                    <div class="form-check form-check-inline">
                                                        <input type="radio" name="gender" class="form-check-input"
                                                            value="male" checked>
                                                        <label class="form-check-label">Male</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input type="radio" name="gender" class="form-check-input"
                                                            value="female">
                                                        <label class="form-check-label">Female</label>
                                                    </div> 
                                                </div>
                                                <% } else{ %>
                                                    <div class="col-md-12 mb-2">
                                                        <label class="form-label d-block">Gender</label>
                                                        <div class="form-check form-check-inline">
                                                            <input type="radio" name="gender" class="form-check-input"
                                                                value="male">
                                                            <label class="form-check-label">Male</label>
                                                        </div>
                                                        <div class="form-check form-check-inline">
                                                            <input type="radio" name="gender" class="form-check-input"
                                                                value="female" checked>
                                                            <label class="form-check-label">Female</label>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                        <% if(user.role=='admin' ){ %>
                                                            <div class="col-md-12 mb-2">
                                                                <label class="form-label">Role</label>
                                                                <select class="form-select" name="role" required>
                                                                    <option value="admin" selected>Admin</option>
                                                                    <option value="user" disabled>User</option>
                                                                    <option value="techSupport" disabled>Tech Support
                                                                    </option>
                                                                    <option value="accountant" disabled>Accountant
                                                                    </option>
                                                                </select>
                                                            </div>
                                                            <% }else if(user.role=='user' ){ %>
                                                                <div class="col-md-12 mb-2">
                                                                    <label class="form-label">Role</label>
                                                                    <select class="form-select" name="role" required>
                                                                        <option value="admin">Admin</option>
                                                                        <option value="user" selected>User</option>
                                                                        <option value="techSupport">Tech Support
                                                                        </option>
                                                                        <option value="accountant">Accountant
                                                                        </option>
                                                                    </select>
                                                                </div>
                                                                <% }else if(user.role=='techSupport' ) {%>
                                                                    <div class="col-md-12 mb-2">
                                                                        <label class="form-label">Role</label>
                                                                        <select class="form-select" name="role"
                                                                            required>
                                                                            <option value="admin">Admin</option>
                                                                            <option value="user">User</option>
                                                                            <option value="techSupport" selected>Tech
                                                                                Support</option>
                                                                            <option value="accountant">Accountant
                                                                            </option>
                                                                        </select>
                                                                    </div>
                                                                    <% }else{ %>
                                                                        <div class="col-md-12 mb-2">
                                                                            <label class="form-label">Role</label>
                                                                            <select class="form-select" name="role"
                                                                                required>
                                                                                <option value="user">User</option>
                                                                                <option value="techSupport">Tech Support
                                                                                </option>
                                                                                <option value="accountant" selected>
                                                                                    Accountant
                                                                                </option>
                                                                            </select>
                                                                        </div>
                                                                        <% } %>

                                                                            <div class="col-12 d-flex gap-3 mt-3">
                                                                                <button type="submit"
                                                                                    class="btn btn-primary mt-2">Update</button>
                                                                            </div>
                                    </form>
                                </div>
                            </div>



                        </div>
                    </main>
                    <!-- <a href="#" class="theme-toggle">
                        <i class="fa-regular fa-moon"></i>
                        <i class="fa-regular fa-sun"></i>
                    </a> -->
                    <%- include('./partials/footer.ejs') %>
            </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./js/script.js"></script>
</body>

</html>